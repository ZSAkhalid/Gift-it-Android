<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".checkOutPage">

    <!-- Text view to display thank you message -->

    <TextView
        android:id="@+id/thanksTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Thank you for your purchase!"
        android:textAlignment="center"
        android:textSize="24sp" />

    <!-- Image view to display card image -->
    <ImageView
        android:id="@+id/cardImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp" />

    <!-- Text view to display card type -->
    <TextView
        android:id="@+id/cardTypeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp" />

    <!-- Text view to display card price -->
    <TextView
        android:id="@+id/cardPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp" />

    <!-- Text view to display card code -->
    <TextView
        android:id="@+id/cardCodeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp" />

    <!-- Button to finish checkout -->
    <Button
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="doneHandler"
        android:text="Done" />
</LinearLayout>